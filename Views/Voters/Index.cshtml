@model IEnumerable<BallonDor.DTO.VoterDTO>

@{
    ViewData["Title"] = "Voters";
}

<h1>Voters</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Country</th>
            <th>Role</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Country</td>
                <td>@item.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.VoterId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.VoterId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.VoterId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>