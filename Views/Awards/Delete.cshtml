@model BallonDor.DTO.AwardDTO

@{
    ViewData["Title"] = "Delete Award";
}

<h1>Delete Award</h1>

<h3>Are you sure you want to delete this award?</h3>
<div>
    <h4>@Model.Description</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.Year</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Player</dt>
        <dd class="col-sm-10">@Model.PlayerId</dd>
        <dt class="col-sm-2">Voter</dt>
        <dd class="col-sm-10">@Model.VoterId</dd>
    </dl>
    <form asp-action="Delete">
        <input type="hidden" asp-for="AwardId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>