@model BallonDor.DTO.AwardDTO

@{
    ViewData["Title"] = "Create Award";
}

<h1>Create Award</h1>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Year" class="control-label"></label>
        <input asp-for="Year" class="form-control" />
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PlayerId" class="control-label"></label>
        <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.Players">
            <option value="">-- Select Player --</option>
        </select>
        <span asp-validation-for="PlayerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VoterId" class="control-label"></label>
        <select asp-for="VoterId" class="form-control" asp-items="ViewBag.Voters">
            <option value="">-- Select Voter --</option>
        </select>
        <span asp-validation-for="VoterId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>