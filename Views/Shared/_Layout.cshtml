<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BallonDor</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BallonDor.styles.css" asp-append-version="true" />
    <!-- Custom CSS -->
    <style>
        /* Custom styles for the header */
        .navbar-brand {
            font-size: 2.5rem; /* Big title */
            font-weight: bold;
            color: #007bff !important; /* Blue color for the title */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2); /* Subtle shadow */
        }

        .navbar {
            padding: 1rem 0; /* Add padding to the navbar */
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Add shadow to the navbar */
        }

        .navbar-nav .nav-link {
            font-size: 1.1rem; /* Slightly larger font size for navigation links */
            font-weight: 500; /* Medium font weight */
            color: #333 !important; /* Dark color for links */
            margin: 0 10px; /* Add spacing between links */
            transition: color 0.3s ease; /* Smooth transition for hover effect */
        }

            .navbar-nav .nav-link:hover {
                color: #007bff !important; /* Blue color on hover */
            }

        .navbar-toggler {
            border: none; /* Remove border from the toggler */
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml,%3csvg viewBox='0 0 30 30' xmlns='http://www.w3.org/2000/svg'%3e%3cpath stroke='rgba(0, 123, 255, 1)' stroke-width='2' stroke-linecap='round' stroke-miterlimit='10' d='M4 7h22M4 15h22M4 23h22'/%3e%3c/svg%3e"); /* Custom toggler icon color */
        }

        /* Footer styles */
        .footer {
            background-color: #f8f9fa; /* Light background for the footer */
            padding: 1rem 0; /* Add padding */
            text-align: center; /* Center-align text */
            font-size: 0.9rem; /* Smaller font size */
            color: #6c757d; /* Gray color for text */
        }

            .footer a {
                color: #007bff; /* Blue color for links */
                text-decoration: none; /* Remove underline */
            }

                .footer a:hover {
                    text-decoration: underline; /* Add underline on hover */
                }

        /* Main content area */
        .container {
            padding-top: 2rem; /* Add padding at the top */
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .navbar-brand {
                font-size: 2rem; /* Smaller title on mobile */
            }

            .navbar-nav .nav-link {
                font-size: 1rem; /* Smaller font size for mobile */
                margin: 5px 0; /* Adjust spacing for mobile */
            }
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BallonDor</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <!-- Add navigation links for Players, Awards, and Voters -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Players" asp-action="Index">Players</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Awards" asp-action="Index">Awards</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Voters" asp-action="Index">Voters</a>
                        </li>
                        <!-- Add Swagger API link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" href="/swagger" target="_blank">API Docs</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BallonDor - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>