@model BallonDor.DTO.PlayerDTO

@{
    ViewData["Title"] = "Player Details";
}

<h1>Player Details</h1>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Position</dt>
        <dd class="col-sm-10">@Model.Position</dd>
        <dt class="col-sm-2">Nationality</dt>
        <dd class="col-sm-10">@Model.Nationality</dd>
        <dt class="col-sm-2">Date of Birth</dt>
        <dd class="col-sm-10">@Model.DateOfBirth.ToShortDateString()</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.PlayerId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>